<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"

    android:orientation="vertical"
    tools:context=".SplashActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:src="@drawable/ic_back"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </ImageView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="vertical"

        android:layout_gravity="center"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle"
            android:fontFamily="@font/roboto_medium"

            android:gravity="center"
            android:text="TAG"
            android:textColor="@android:color/white"
            android:textSize="@dimen/texttag" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/relbg">

            <LinearLayout
                android:paddingTop="20dp"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Verification Code"
                    android:textColor="@color/colorPrimaryDark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Please Enter Verification code which is sent to +(91) 7685 7584 47"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
                <me.philio.pinentry.PinEntryView
                    android:id="@+id/vr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:digitTextSize="15sp"
                    android:layout_marginTop="10dp"
                    app:digitBackground="@drawable/pin_bg"
                    app:digitElevation="5dp"
                    app:digitSpacing="10dp"
                    app:mask=""
                    app:pinInputType="number" />


                <TextView
                    android:layout_marginTop="15dp"

                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/btnbg"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp"
                    android:paddingRight="16dp"

                    android:paddingBottom="15dp"
                    android:text="SUBMIT"
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>



</LinearLayout>


