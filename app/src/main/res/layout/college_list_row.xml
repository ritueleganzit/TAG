<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/clgcard"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgbg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/schools_tri"
                android:scaleType="centerCrop"
                ></ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:layout_gravity="bottom|right"
                android:gravity="center"


                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/btnbgorange"


                android:id="@+id/submit"



                android:layout_below="@+id/frame"

                android:text="Apply"
                android:textColor="@android:color/white" />
        </FrameLayout>



        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/collegename"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_toLeftOf="@+id/myRatingBar"
                android:text="RV College of Engineering "
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"></TextView>

            <RatingBar
                android:id="@+id/myRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2"
                android:theme="@style/ReviewRatingBar"
                android:layout_alignParentRight="true"
                android:isIndicator="false"
                ></RatingBar>
            <TextView

                android:textColor="#939393"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_below="@+id/collegename"
                android:fontFamily="@font/roboto_regular"
                android:text="Banglore, Karnataka, India "
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="top"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_below="@+id/collegename"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="start"

                    android:text="Computer Science"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
                <TextView
                    android:textColor="#939393"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"

                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text="Approved by - AICTE"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>



            </LinearLayout>
<LinearLayout
    android:layout_gravity="top"

    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_clock"
        android:gravity="center"
        android:layout_gravity="top"

        android:text="Full Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="start"

        android:text="Accredited by NAAC"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

</LinearLayout>
<LinearLayout
    android:layout_gravity="top"

    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="start"
        android:layout_gravity="top"
        android:layout_weight="1"

        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_cal"

        android:text="3 Years"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:gravity="start"
        android:layout_weight="1"
        android:layout_gravity="start"


        android:text="Affiliated to Deemed university"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

</LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
>
            <TextView

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="Placement : Excellent"
                android:layout_height="wrap_content">

            </TextView>
           <TextView
               android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="Private"
                android:layout_height="wrap_content">

            </TextView>
<TextView
               android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="VTU"
                android:layout_height="wrap_content">

            </TextView><TextView
               android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="Rank 10"
                android:layout_height="wrap_content">

            </TextView>



        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>