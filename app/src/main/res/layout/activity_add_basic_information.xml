<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".TermsAndCondition">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetEnd="0dp"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/CustomActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_back_white"
                        android:id="@+id/back"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_toRightOf="@+id/back"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"
                        android:text="Basic Information"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textTitle" />

                    <TextView
                        android:textColor="#ffffff"
                        android:text="Next"
                        android:gravity="end"

                        android:layout_marginRight="20dp"
                        android:id="@+id/next"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />




                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <com.eleganzit.tag.utils.MyNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="5dp"
        tools:context=".ui.activity.AddPersonalInfoActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textColor="@color/txtcolor"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:text="First Name"
                        android:layout_height="wrap_content">


                    </TextView>
                    <EditText
                        android:id="@+id/name"
                        android:inputType="text"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="9dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/editbg"
                        android:layout_height="wrap_content"></EditText>
                    <TextView
                        android:textColor="@color/txtcolor"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:text="Middle Name"
                        android:layout_height="wrap_content">


                    </TextView>
                    <EditText
                        android:inputType="text"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="9dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/editbg"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:textColor="@color/txtcolor"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:text="Last Name"
                        android:layout_height="wrap_content">


                    </TextView>
                    <EditText
                        android:inputType="text"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="9dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/editbg"
                        android:layout_height="wrap_content"></EditText>

                    <TextView
                        android:textColor="@color/txtcolor"
                        android:layout_marginBottom="10dp"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="?android:textAppearanceSmall"

                        android:layout_width="match_parent"
                        android:text="Date of Birth"
                        android:layout_height="wrap_content">

                    </TextView>

                    <EditText
                        android:id="@+id/mobile"
                        android:focusable="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="9dp"
                        android:drawableRight="@drawable/ic_calender"
                        android:layout_width="match_parent"
                        android:background="@drawable/editbg"
                        android:layout_height="wrap_content"></EditText>

                    <TextView
                        android:textColor="@color/txtcolor"
                        android:layout_marginBottom="10dp"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="?android:textAppearanceSmall"

                        android:layout_width="match_parent"
                        android:text="Gender"
                        android:layout_height="wrap_content">

                    </TextView>

                    <EditText
                        android:id="@+id/user_email"
                        android:drawableRight="@drawable/ic_down"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="9dp"
                        android:focusable="false"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:background="@drawable/editbg"
                        android:layout_height="wrap_content"></EditText>

                    <TextView
                        android:textColor="@color/txtcolor"
                        android:layout_marginBottom="10dp"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="?android:textAppearanceSmall"

                        android:layout_width="match_parent"
                        android:text="Category"
                        android:layout_height="wrap_content">

                    </TextView>

                    <EditText
                        android:drawableRight="@drawable/ic_down"

                        android:id="@+id/location"
                        android:focusable="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        android:padding="9dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/editbg"
                        android:layout_height="wrap_content"></EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textColor="@color/txtcolor"
                                android:layout_marginBottom="10dp"

                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"

                                android:layout_width="match_parent"
                                android:text="For the course"
                                android:layout_height="wrap_content">

                            </TextView>

                            <EditText
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:inputType="text"
                                android:layout_marginBottom="10dp"
                                android:padding="9dp"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:background="@drawable/editbg"
                                android:layout_height="wrap_content"></EditText>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="0.4"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@color/txtcolor"
                                android:layout_marginBottom="10dp"

                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"

                                android:layout_width="match_parent"
                                android:text="For the Specialization"                                android:layout_height="wrap_content">

                            </TextView>

                            <EditText
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:inputType="text"
                                android:layout_marginBottom="10dp"
                                android:padding="9dp"
                                android:focusable="false"

                                android:layout_width="match_parent"
                                android:background="@drawable/editbg"
                                android:layout_height="wrap_content"></EditText>

                        </LinearLayout>

                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        android:id="@+id/rc_course_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Add more"
                        android:id="@+id/addmore"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_plus"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
        </LinearLayout>

    </com.eleganzit.tag.utils.MyNestedScrollView>

</LinearLayout>
