<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.school.tabfragment.AppliedCollegeFragment">
    <LinearLayout
        android:id="@+id/lin_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="Questions Asked"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/txtcolor"
                    android:gravity="start"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:id="@+id/numofquestion"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/txtcolor"
                    android:gravity="end"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:id="@+id/rc_supplied_college"
        ></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <include android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center" layout="@layout/nodata"></include>
</LinearLayout>