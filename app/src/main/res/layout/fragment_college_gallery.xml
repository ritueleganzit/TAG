<com.eleganzit.tag.utils.MyNestedScrollView
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        app:contentPadding="2dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout android:layout_below="@+id/lin5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:id="@+id/linearlayoutsize"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <TextView
    android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:text="Events"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content">

            </TextView>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rc_events"
                android:orientation="horizontal"
                app:spanCount="3"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:text="View all"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <LinearLayout android:layout_below="@+id/lin5"
            android:layout_width="match_parent"
            android:id="@+id/lin6"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_margin="5dp"

            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <TextView
                android:textAppearance="?android:textAppearanceMedium"

                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:text="Infrastructure"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content">

            </TextView>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:id="@+id/rc_infra"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="match_parent"
                android:text="View all"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <LinearLayout android:layout_below="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_margin="5dp"

            android:orientation="vertical"
            android:gravity="top"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <TextView
                android:textAppearance="?android:textAppearanceMedium"

                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:text="Video"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content">

            </TextView>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rc_video"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="match_parent"
                android:text="View all"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</com.eleganzit.tag.utils.MyNestedScrollView>
