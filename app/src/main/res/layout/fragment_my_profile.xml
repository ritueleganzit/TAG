<com.eleganzit.tag.utils.MyNestedScrollView android:id="@+id/news_feed_scroll"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:background="@drawable/ed_bg"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/roboto_medium"

                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/black"
                    android:text="PERSONAL INFORMATION"
                    />
                <ImageView
                    android:id="@+id/ed_profile"
                    android:layout_weight="0.2"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"/>

            </LinearLayout>

          <TextView
              android:textColor="@color/txtcolor"
              android:id="@+id/user_email"

              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:fontFamily="@font/roboto_regular"
android:textAppearance="?android:textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

          </TextView>
      <TextView
          android:textColor="@color/txtcolor"
android:id="@+id/mobile"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:fontFamily="@font/roboto_regular"
          android:textAppearance="?android:textAppearanceSmall"

          android:layout_width="match_parent"
              android:layout_height="wrap_content">

          </TextView>
      <TextView
          android:fontFamily="@font/roboto_regular"
          android:textAppearance="?android:textAppearanceSmall"
          android:textColor="@color/txtcolor"

android:id="@+id/location"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
              android:layout_height="wrap_content">

          </TextView>


        </LinearLayout>
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/ed_bg"
                    android:orientation="horizontal">



                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_medium"
                        android:text="EDUCATION BACKGROUND"
                        />
                    <ImageView
                        android:id="@+id/ed_edu"
                        android:layout_weight="0.2"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_educations"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/ed_bg"
                    android:orientation="horizontal">



                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_medium"
                        android:text="WORK BACKGROUND"
                        />
                    <ImageView
                        android:layout_weight="0.2"
                        android:id="@+id/ed_work"

                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:background="#ffffff"

                    android:id="@+id/rc_work"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/ed_bg"
                    android:orientation="horizontal">



                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/roboto_medium"
                        android:text="CURRENT EDUCATION PREFERENCE"
                        />
                    <ImageView
                        android:layout_weight="0.2"
                        android:layout_gravity="end"
                        android:id="@+id/ed_edu_pref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:background="#ffffff"

                    android:id="@+id/rc_edu_pref"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</com.eleganzit.tag.utils.MyNestedScrollView>