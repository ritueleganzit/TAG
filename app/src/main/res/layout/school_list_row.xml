<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/clgcard"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgbg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/schools_tri"
                android:scaleType="centerCrop"
                ></ImageView>
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:layout_gravity="bottom|right"
                android:gravity="center"


                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/btnbgorange"


                android:id="@+id/apply"



                android:layout_below="@+id/frame"

                android:text="Apply"
                android:textColor="@android:color/white" />
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/rel"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_alignParentLeft="true"
                android:id="@+id/collegename"
                android:capitalize="words"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_toLeftOf="@+id/myRatingBar"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"></TextView>

            <RatingBar
                android:id="@+id/myRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/ReviewRatingBar"
                android:layout_alignParentRight="true"
                android:isIndicator="true"
                ></RatingBar>
            <TextView
                android:capitalize="words"
                android:id="@+id/collegeaddress"
                android:textColor="#939393"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_below="@+id/collegename"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:capitalize="words"
                android:id="@+id/ranktv"
                android:textColor="#939393"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_below="@+id/myRatingBar"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="top"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_below="@+id/collegename"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="words"
                    android:gravity="start"

                    android:id="@+id/specialname"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
android:id="@+id/ownership"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:capitalize="words"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:layout_gravity="top"

                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="top"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:layout_gravity="top|end"
                    android:layout_weight="1"
                    android:id="@+id/accreditation"
                    android:drawablePadding="5dp"
                    android:capitalize="words"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="top"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_below="@+id/collegename"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category"
                    android:capitalize="words"
                    android:gravity="start"

                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:capitalize="words"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="top|end"
android:gravity="end|center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_clock"
                    android:gravity="end"
                    android:layout_gravity="top|end"
                    android:layout_height="wrap_content"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:layout_gravity="center"

                    android:capitalize="words"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="top"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/collegename"
                    android:fontFamily="@font/roboto_regular"
                    android:capitalize="words"
                    android:gravity="start"
                    android:id="@+id/college_type"

                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:capitalize="words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="top"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:id="@+id/board_name"
                    android:capitalize="words"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
                </LinearLayout>




        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>