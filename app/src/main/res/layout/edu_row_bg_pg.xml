<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lin_pg"
    android:visibility="gone"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"

            android:layout_gravity="end"

            android:orientation="vertical">





        </LinearLayout>


        <TextView
            android:textColor="@color/txtcolor"
            android:layout_marginBottom="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?android:textAppearanceSmall"

            android:layout_width="match_parent"
            android:text="University Name"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:id="@+id/pg_school_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto_regular"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:background="@drawable/editbg"
            android:layout_height="wrap_content"></EditText>
        <TextView
            android:textColor="@color/txtcolor"
            android:layout_marginBottom="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?android:textAppearanceSmall"

            android:layout_width="match_parent"
            android:text="Degree/Diploma Name "
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:id="@+id/pg_degree_uni"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto_regular"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:background="@drawable/editbg"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:textColor="@color/txtcolor"
            android:layout_marginBottom="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?android:textAppearanceSmall"

            android:layout_width="match_parent"
            android:text="Course Completion Year"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:drawableRight="@drawable/ic_down"
            android:id="@+id/pg_year"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto_regular"
            android:focusable="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:background="@drawable/editbg"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:textColor="@color/txtcolor"
            android:layout_marginBottom="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?android:textAppearanceSmall"

            android:layout_width="match_parent"
            android:text="College Name"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:id="@+id/pg_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:background="@drawable/editbg"
            android:layout_height="wrap_content"></EditText>


        <TextView
            android:textColor="@color/txtcolor"
            android:layout_marginBottom="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?android:textAppearanceSmall"

            android:layout_width="match_parent"
            android:text="Specialization"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto_regular"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/pg_specialization"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:background="@drawable/editbg"
            android:layout_height="wrap_content"></EditText>   <TextView
        android:textColor="@color/txtcolor"
        android:layout_marginBottom="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textAppearance="?android:textAppearanceSmall"

        android:layout_width="match_parent"
        android:text="Marks"
        android:layout_height="wrap_content">

    </TextView>

        <EditText
            android:inputType="number"
            android:id="@+id/pg_marks"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:background="@drawable/editbg"
            android:layout_height="wrap_content"></EditText>


    </LinearLayout>


</LinearLayout>

