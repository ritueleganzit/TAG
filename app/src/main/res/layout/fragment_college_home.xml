<?xml version="1.0" encoding="utf-8"?>
<com.eleganzit.tag.utils.MyNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.CollegeHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="vertical">
        <android.support.v7.widget.CardView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardUseCompatPadding="true"
            android:id="@+id/clgcard"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"


            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout

                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imgbg"
                    android:src="@drawable/schools_tri"
                    android:scaleType="centerCrop"
                    ></ImageView>


                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/collegename"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_toLeftOf="@+id/myRatingBar"
                        android:layout_height="wrap_content"></TextView>

                    <RatingBar
                        android:id="@+id/myRatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:theme="@style/ReviewRatingBar"
                        android:layout_alignParentRight="true"
                        android:isIndicator="true"
                        ></RatingBar>
                    <TextView

                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:id="@+id/collagelocation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_below="@+id/collegename"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"></TextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_gravity="top"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"

                            android:text="Computer Science"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:id="@+id/approved_by"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="top"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:id="@+id/study_mode"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_clock"

                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="top"
                            android:text="Full Time"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_gravity="top"
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/accreditation"

                            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="top"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="start"
                            android:id="@+id/course_duration"

                            android:layout_weight="1"
                            android:layout_gravity="top"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_cal"

                            android:text="3 Years"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:layout_gravity="start"


                            android:text="Affiliated to Deemed university"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
android:id="@+id/placement"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="Placement : Excellent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:id="@+id/ownership"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/university_name"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:layout_height="wrap_content">

                    </TextView><TextView
                    android:id="@+id/rank"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_height="wrap_content">

                </TextView>



                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlayoutsize"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"

                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="14dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:paddingEnd="12dp"
                    android:layout_width="match_parent"
                    android:text="COURSES"


                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content">

                </TextView>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:id="@+id/courses_rc"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="5dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:layout_gravity="end"
                    android:gravity="end"

                    android:id="@+id/viewAll"

                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="View All Courses"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"></TextView>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingStart="14dp"
                    android:layout_marginBottom="5dp"
                    android:paddingEnd="12dp"
                    android:layout_width="match_parent"
                    android:text="GALLERY"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content">

                </TextView>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rc_events"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="5dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="View All"
                    android:id="@+id/viewallgallery"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"

                android:layout_height="wrap_content"
                android:gravity="center"

                >

                <TextView


                    android:id="@+id/txtlogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:background="@drawable/btnbg"
                    android:fontFamily="@font/roboto_regular"

                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Download Brouchure"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:paddingStart="14dp"
            android:layout_marginBottom="5dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:text="CONTACT DETAILS"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@drawable/ed_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerInside"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gps"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At Post Rajuri Alephata, Kalyan Nagsr Highway India 560060"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerInside"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"></ImageView>
            <TextView
                android:padding="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="080 245869"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerInside"
                android:padding="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mail"></ImageView>
            <TextView

                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@gmail.com"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerInside"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/internet"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.example.com"></TextView>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:paddingStart="14dp"
            android:layout_marginBottom="5dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:text="FACILITIES"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_gravity="top|center"

                android:layout_height="wrap_content"
                android:id="@+id/rc_facility"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
                tools:context=".ui.fragment.CollegeFacilityFragment">


            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
android:id="@+id/applynow"
                android:background="@drawable/btn_sq"
                android:fontFamily="@font/roboto_regular"

                android:gravity="center"
                android:padding="10dp"
                android:text="Apply Now"
                android:textColor="@android:color/white" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"></View>
            <TextView
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:background="@drawable/btn_sq"
                android:fontFamily="@font/roboto_regular"

                android:gravity="center"
                android:padding="10dp"
                android:text="Add to Compare"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</com.eleganzit.tag.utils.MyNestedScrollView>