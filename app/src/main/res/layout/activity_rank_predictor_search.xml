<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFE7E7E7"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".TermsAndCondition">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetEnd="0dp"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/CustomActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_back_white"
                        android:id="@+id/back"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_toRightOf="@+id/back"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"
                        android:text="Rank Predictor"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textTitle" />






                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <com.eleganzit.tag.utils.MyNestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:fitsSystemWindows="true"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:textColor="#747474"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Rank Predictor"
android:layout_alignParentTop="true"
                android:fontFamily="@font/roboto_bold"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txts_select" />
            <TextView
                android:layout_below="@+id/txts_select"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:id="@+id/dummycontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard "></TextView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/dummycontent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edyearofdegree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="6dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:background="@android:color/transparent"

                        android:dropDownVerticalOffset="45dp"
                        android:paddingBottom="12dp"

                        android:paddingTop="12dp"
                        android:paddingRight="2dp"></EditText>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:id="@+id/linbottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="bottom"

                android:orientation="horizontal">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/predictrank"
                    android:background="@drawable/btn_sq"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"


                    android:padding="10dp"
                    android:text="Predict the Rank"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </com.eleganzit.tag.utils.MyNestedScrollView>
</LinearLayout>

