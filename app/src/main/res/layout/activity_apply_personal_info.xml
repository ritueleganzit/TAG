<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".TermsAndCondition">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetEnd="0dp"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/CustomActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_back_white"
                        android:id="@+id/back"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_toRightOf="@+id/back"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30dp"
                        android:text="Personal Information"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textTitle" />

                    <TextView
                        android:textColor="#ffffff"
                        android:text="Next"
                        android:gravity="end"

                        android:layout_marginRight="20dp"
                        android:id="@+id/next"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />




                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <com.eleganzit.tag.utils.MyNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nessted"
        android:layout_margin="5dp"
        tools:context=".ui.activity.AddPersonalInfoActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/lintouch"

            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:textColor="@color/txtcolor"
                    android:layout_marginTop="10dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Father Name"
                    android:layout_height="wrap_content">


                </TextView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/father_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"
                            android:inputType="text|textNoSuggestions"
                            android:dropDownVerticalOffset="45dp"
                            android:paddingBottom="12dp"

                            android:paddingTop="12dp"
                            android:paddingRight="2dp"

                            ></EditText>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Father's Occupation"
                    android:layout_height="wrap_content">


                </TextView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/father_occupation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Mother Name"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/mother_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Mother's Occupation"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/mother_occupation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Email id"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/ed_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Mobile number"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="number"                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/mobilenum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:maxLength="10"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Permanent Address
"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:id="@+id/permanent_address"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="Temporary Address"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:id="@+id/temporary_address"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:textColor="@color/txtcolor"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:text="For NRI"
                    android:layout_height="wrap_content">


                </TextView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:inputType="text|textNoSuggestions"                            android:id="@+id/for_NRI"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="6dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:background="@android:color/transparent"

                            android:dropDownVerticalOffset="45dp"
                            android:paddingTop="12dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="12dp">

                        </EditText>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>

    </com.eleganzit.tag.utils.MyNestedScrollView>

</LinearLayout>
